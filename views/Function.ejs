<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= __('FunctionForm') %></title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- <link rel="stylesheet" href="css/function.css"> -->
    <link rel="stylesheet" href="css/style1.css">
    <!-- <link rel="stylesheet" href="css/home.css"> -->
</head>
<body>
  <%- include('layouts/header1');-%>
  <%- include('layouts/naviMenu1');-%>
<!-- collapsible submenus -->
<div class="container-fluid">    
      <div class="row">
      <%- include('layouts/sidebar');-%>
      <div class="col-md-8">
        <div class="container mt-4 ml-7">
            <form id="FunctionForm" action="/insertFunctionData" method="post">
                    <!-- Name Input -->
                    <h5> <%= __('FunctionForm') %></h5>
                <div class="form-group row">
                    <label for="function" class="col-sm-4 col-form-label"><%= __('FunctionName') %>:</label>
                    <div class="col-sm-8 mb-2">
                        <input type="text" class="form-control" id="function"  name="FUNCTION_NAME" required>
                        <small id="functionError" class="text-danger" style="display: none;">Function Name is required</small>
                    </div>
                    <label for="menu" class="col-sm-4 col-form-label"> <%= __('Menu') %>:</label>
                    <div class="col-sm-8 mb-2">
                      <select class="form-control" id="menu" name="MENU_NAME" required style="border-color: black;">
                          <% if (menuNames) { %>
                              <% menuNames.forEach(menu => { %>
                                  <option value="<%= menu %>"><%= menu %></option>
                              <% }); %>
                          <% } %>
                      </select>
                  </div>
                    <label for="description" class="col-sm-4 col-form-label"> <%= __('descriptions') %>:</label>
                    <div class="col-sm-8 mb-2">
                        <input type="text" class="form-control" id="description" name="DESCRIPTION" required >
                    </div>
                </div>       
        
                <!-- Submit Button -->
                <div class="form-group row">
                    <div class="col-sm-10 ">
                        <button type="button" class="btn" onclick="validateAndSubmit()"><%= __('Submit') %></button>
                    </div>
                </div>
            </form>
        </div>
      </div>
    </div>        
  </div>
<!-- Bootstrap JS and Popper.js -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<%- include('layouts/script');-%>

<script>
    function validateAndSubmit() {
        var functionInput = document.getElementById("function").value;

        if (functionInput.trim() == "") {
            document.getElementById("functionError").style.display = "block";
        } else {
            document.getElementById("FunctionForm").submit();
        }
    }
</script>
</body>
</html>
